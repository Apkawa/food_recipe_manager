{
  "name": "food_recipe_manager",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check": "npm run test && npm run lint",
    "pre-commit": "npm run format && git add . && npm run check && npm run build",
    "commitlint": "commitlint --config '.config/.commitlintrc.json'",
    "commit": "npm run pre-commit && ts-node node_modules/.bin/cz",
    "release": "standard-version",
    "release:pre": "npm run release -- --prerelease --skip.tag",
    "release:patch": "npm run release -- --release-as patch",
    "release:minor": "npm run release -- --release-as minor"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "commitizen": "^4.2.6",
    "cross-env": "^7.0.3",
    "cz-customizable": "^7.0.0",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.8.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.config/commitzen.ts"
    }
  },
  "browserslist": [
    "last 2 years",
    "> 1%",
    "not dead"
  ],
  "babel": {
    "plugins": [
      [
        "@babel/plugin-proposal-pipeline-operator",
        {
          "proposal": "minimal"
        }
      ]
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 100
  }
}
