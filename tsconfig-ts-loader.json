{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./src/food_recipe/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    },
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2018"
    ],
    "removeComments": true,
    "experimentalDecorators": true
  }
}
