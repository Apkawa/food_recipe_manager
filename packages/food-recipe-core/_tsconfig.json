{
  "extends": "@tsconfig/node20/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "esModuleInterop": true,
      "moduleResolution": "nodenext",
    }
  },
  "exclude": [
    "tests/**"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./src/food_recipe/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    },
    "types": ["node", "jest"]
  }
}
