{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "tests/**"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@app/*": [
        "./src/food_recipe/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    },
    "verbatimModuleSyntax": false
  }
}
